<div class="container">
    <div class="row">
        <!--area where the picture will go -->
        <img src="../public/assets/img/shoppingCart.jpg" alt="picture of a shopping cart fill with food">
    </div>


    <div class="row">
        <!--area where the items that need to shop for will go-->
        <div class="col-md-6">
            <h3>Need to Buy</h3>
            <ul>
                {{#each items}} {{#unless this.got}}
                <li>
                    <p>
                        {{this.id}}{{this.item_name}}
                        <form action="/{{this.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="got" value="true">
                            <button type="submit">Got It!</button>
                        </form>
                    </p>
                </li>
                {{/unless}} {{/each}}
            </ul>
        </div>

        <div class="col-md-6">
            <h3>Got</h3>
            <ul>
                {{#each items}} {{#if this.got}}
                <li>
                    <p>{{this.id}}.{{this.item_name}}</p>
                </li>
                {{/if}} {{/each}}
            </ul>

        </div>
    </div>

    <div class="row">
        <form class="create-update-form" action="/" method="POST">
            <div class="form-group">
                <label>Item Name:</label>
                <input type="text" name="name">
            </div>
            <button type="submit">Add Item to Shopping List</button>
        </form>
    </div>
</div>
